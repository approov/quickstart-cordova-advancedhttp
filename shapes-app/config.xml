<?xml version='1.0' encoding='utf-8'?>
<widget id="io.approov.demo.shapes.http.cordova" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Cordova Approov Shapes</name>
    <description>
        A simple shapes app to demonstrate the Approov HTTP Cordova-plugin
    </description>
    <author email="support@approov.io" href="https://approov.io/">
        Approov Team
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <splash src="res/screen/android/screen.png" />
    </platform>
    <platform name="ios">
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^5.0.0" />
</widget>
